{
  "rules": {
    ".read": true,
    ".write": false,
    "menuMaster": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "activeMenu": {
      ".read": true,
      ".write": "auth != null"
    },
    "shopSchedule": {
      ".read": true,
      ".write": "auth != null"
    },
    "orders": {
      ".read": true,
      ".write": true,
      "$orderId": {
        ".validate": "newData.hasChildren(['name', 'blockDoor', 'mobile', 'items', 'total'])"
      }
    }
  }
}
